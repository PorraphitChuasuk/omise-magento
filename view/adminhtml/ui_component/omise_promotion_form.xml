<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">omise_promotion_form.omise_promotion_data_source</item>
            <item name="deps" xsi:type="string">omise_promotion_form.omise_promotion_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Cart Price Rule</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magento\SalesRule\Block\Adminhtml\Promo\Quote\Edit\SaveButton"/>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <namespace>omise_promotion_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>omise_promotion_form.omise_promotion_data_source</dep>
        </deps>
    </settings>
    <dataSource name="omise_promotion_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Omise\Payment\Model\Rule\DataProvider</argument>
            <argument name="name" xsi:type="string">omise_promotion_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="omise/promotion/save"/>
        </settings>
        <dataProvider class="Omise\Payment\Model\Rule\DataProvider" name="omise_promotion_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="rule_information" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <label translate="true">Rule Information</label>
        </settings>
        <field name="promo_code" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Promocode</label>
                <visible>true</visible>
                <dataType>text</dataType>
                <dataScope>promo_code</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
